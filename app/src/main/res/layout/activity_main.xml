<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1e1f1f"
    tools:context="com.example.vaksys_49.calcu.MainActivity">

    <LinearLayout
        android:layout_weight="3"
        android:background="#1e1f1f"
        android:id="@+id/biggreen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputvalue"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="right"
            android:background="#637585"
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="x"
            android:id="@+id/clear"
            android:onClick="backtext"
            style="@style/mystyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/bigbluebox"
        android:background="#1e1f1f"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        >
    <LinearLayout
        android:id="@+id/orangebox1"
        android:background="#1e1f1f"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <Button
            android:text="sin"
            style="@style/mystyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="cos"
            style="@style/mystyle"
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="tan"
            style="@style/mystyle" android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="∏"
            style="@style/mystyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="!"
            style="@style/mystyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/orangebox2"
        android:background="#1e1f1f"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp">

        <Button
            android:text="ln"
            style="@style/mystyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="log"
            style="@style/mystyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="e"
            style="@style/mystyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="d"
            style="@style/mystyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="p"
            style="@style/mystyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/blackbox1"
        android:background="#1e1f1f"
        android:layout_weight="21"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/boxgreen1"
            android:background="#1e1f1f"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/seven"
                android:text="7"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/eight"
                android:text="8"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/nine"
                android:text="9"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="+"
                android:id="@+id/add"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="("
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/boxgreen2"
            android:background="#1e1f1f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/four"
                android:text="4"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="5"
                android:id="@+id/five"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="6"
                android:id="@+id/six"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="*"
                android:id="@+id/mul"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text=")"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bluebox"
            android:layout_weight="2"
            android:background="#1e1f1f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/redbox1"
                android:background="#1e1f1f"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/pinkbox1"
                    android:layout_weight="1"
                    android:background="#1e1f1f"

                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <Button
                        android:text="1"
                        android:id="@+id/one"
                        style="@style/mystyle"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <Button
                        android:text="2"
                        android:id="@+id/two"
                        style="@style/mystyle"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <Button
                        android:text="3"
                        android:id="@+id/three"
                        style="@style/mystyle"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <Button
                        android:text="-"
                        android:id="@+id/sub"
                        style="@style/mystyle"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pinkbox2"
                    android:layout_weight="1"
                    android:background="#1e1f1f"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <Button
                        android:text="0"
                        android:id="@+id/zero"
                        style="@style/mystyle"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <Button
                        android:text="."
                        android:id="@+id/dot"
                        style="@style/mystyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <Button
                        android:text="/"
                        android:id="@+id/div"
                        style="@style/mystyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>
            <Button
                android:text="="
                android:id="@+id/show"
                style="@style/mystyle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
</LinearLayout>


